@model AutoPartsStockControlSystem.Models.Supplier
@{
    /**/

    Layout = "~/Views/Shared/_Layout_DataTable.cshtml";
}

@using (Html.BeginForm("AddOrEditSuppliers", "AdminPage", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{@Html.HiddenFor(model => model.SupplierID)
<div class="form-group">
    @Html.LabelFor(model => model.SupplierName, "Name", new { @class = "control-label" })
