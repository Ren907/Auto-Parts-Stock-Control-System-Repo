
@model AutoPartsStockControlSystem.Models.ResetPasswordModel


@{
    /**/

    ViewBag.Title = "Forgot Password";

    Layout = "~/Views/Shared/_Layout_ResetPassword.cshtml";
}

<h2>Forgot Password </h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
   
    <hr />

    <div class="form-group">
        Please enter your registered email address below to receive an email containing a link, to reset your password.
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Email Address</label>
        @Html.TextBox("EmailID", "", new { @class = "form-control", autocomplete = "off" })
    </div>
    <br />
    <div class="text-success">

        @ViewBag.Message1
    </div>
    <div class="text-danger">
        @ViewBag.Message

    </div>
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-success" />
        </div>
    </div>
</div>



}